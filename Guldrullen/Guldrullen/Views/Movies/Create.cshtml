@model MovieCreateVM
@{
    ViewBag.Title = "Create";
}



<form asp-controller="Movies" asp-action="Create">
    <h2>Add movie</h2>

    <div class="form-group">
        <label asp-for="Title"></label>
        <input style="width: 200px;" class="form-control" asp-for="Title"  />
        <span style="color:red;" asp-validation-for="Title"></span>
    </div>
    <div class="form-group">
        <label asp-for="About"></label>
        <textarea style="width: 200px;" class="form-control" asp-for="About" ></textarea>
        <span style="color:red;" asp-validation-for="About"></span>
    </div>

    <div class="form-group">
        <label asp-for="Length"></label>
        <input style="width: 200px;" class="form-control" asp-for="Length"  />
        <span style="color:red;" asp-validation-for="Length"></span>

    </div>
    <div class="form-group">
        <label asp-for="Genre"></label>
        <input style="width: 200px;" class="form-control" asp-for="Genre"  />
        <span style="color:red;" asp-validation-for="Genre"></span>

    </div>
    <div class="form-group">
        <label asp-for="Trailer"></label>
        <input style="width: 200px;" class="form-control" asp-for="Trailer" />

    </div>
    <input type="submit" class="btn btn-default" value="Confirm changes" />
</form>