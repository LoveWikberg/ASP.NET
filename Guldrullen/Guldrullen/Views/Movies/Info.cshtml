@model MovieReviewAdvancedVM
@{
    ViewBag.Title = "Reviews";
}

<div class="container-fluid">
    <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Leave review</button>

    <div id="myModal" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Review @Model.FormViewModel.Title</h4>
                </div>
                <div class="modal-body">
                    <form asp-controller="Movies" asp-action="Info">
                        <label asp-for="CreateReview.Rate"></label>
                        <br />
                        <input asp-for="CreateReview.Rate">
                        <span asp-validation-for="CreateReview.Rate"></span>
                        <br />
                        <label asp-for="CreateReview.Title"></label>
                        <br />
                        <input asp-for="CreateReview.Title">
                        <span asp-validation-for="CreateReview.Title"></span>
                        <br />
                        <label asp-for="CreateReview.Text"></label>
                        <br />
                        <textarea asp-for="CreateReview.Text"></textarea>
                        <span asp-validation-for="CreateReview.Text"></span>
                        <input type="submit" value="submit"  />
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>


    <div class="container-fluid bg-grey">
        <div class="row">
            <div class="col-sm-2">
                <img src="~/img/@(Model.FormViewModel.Id).jpg" width="120" height="150" alt="Image error" />
            </div>
            <div class="col-sm-8">
                <h2>@Model.FormViewModel.Title</h2>
                <p>@Model.FormViewModel.InfoText</p>
            </div>
        </div>
    </div>
    <hr style="width:100%; color:black; height:1px;background-color:black;" />
    <h2>Reviews</h2>
    <div class="row content">


        <div class="col-sm-9">
            <hr>
            @foreach (var review in Model.ListViewModels)
            {
                @Html.Partial("DisplayReview", review)
            }

        </div>
    </div>
</div>