@model CarsIndexVM

@if (Model.ShowAsFast)
{
    <tr class="info">
        <td>@Model.Brand </td>
        <td>
            <div class="btn-group">
                <button type="button" class="btn btn-primary btn-xs" data-toggle="modal" data-target="#@Model.Id">Info</button>
                <button type="button" class="btn btn-primary btn-xs" onclick='location.href="/Cars/Edit/@Model.Id"'>Edit</button>
                <button type="button" class="btn btn-primary btn-xs" data-toggle="modal" data-target="#@Model.Id@Model.Brand">Remove</button>
            </div>
        </td>

    </tr>
}
else
{
    <tr>
        <td>@Model.Brand</td>
        <td>
            <div class="btn-group">
                <button type="button" class="btn btn-primary btn-xs" data-toggle="modal" data-target="#@Model.Id">Info</button>
                <button type="button" class="btn btn-primary btn-xs" onclick='location.href="/Cars/Edit/@Model.Id"'>Edit</button>
                <button type="button" class="btn btn-primary btn-xs" data-toggle="modal" data-target="#@Model.Id@Model.Brand">Remove</button>
            </div>
        </td>
    </tr>
}
<div id="@Model.Id" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">@Model.Brand</h4>
            </div>
            <div class="modal-body">
                <p>Model: @Model.Model</p>
                <p>Top-speed: @Model.TopSpeed km/h</p>
                <p>Doors: @Model.Doors</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>

<div id="@Model.Id@Model.Brand" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Remove <i>@Model.Brand @Model.Model</i></h4>
            </div>
            <div class="modal-body">
                <p>Are you sure that you want to remove this car?</p>
                <div class="container">
                    <button type="button" class="btn btn-default" onclick='location.href="/Cars/Remove/@Model.Id"' >Yes</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">No</button>
                </div>
            </div>
        </div>

    </div>
</div>




